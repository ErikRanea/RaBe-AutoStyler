  {
    "manifest_version": 3,
    "name": "Formato ChatGPT a Gmail",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://mail.google.com/*",
      "https://chat.openai.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup":"popup.html",
      "default_icons":{
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  